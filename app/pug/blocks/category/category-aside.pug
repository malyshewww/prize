aside.category__aside
	button(type="button" class="category__aside-close icon-delete" data-filter-close)
	form(action="#").filter#filters
		input(type="hidden" name="sortby" value="menuindex")
		input(type="hidden" class="filter-input__sortdir" name="sortdir" value="asc")
		input(type="hidden" class="filter-input__rating" name="rating")
		input(type="hidden" class="filter-input__classic" name="classic")
		input(type="hidden" class="filter-input__premium" name="premium")
		input(type="hidden" class="filter-input__vip" name="vip")
		.filter__body
			.filter__header 
				h2.filter__title.content-title Фильтры
				button(type="reset" disabled).filter__button.filter-reset Сбросить всё
			.filter-group(data-filter-group)
				.filter-group__title.content-title Цена
				.filter-group__item
					.filter-group__inputs
						label.filter-group__label
							input(type="number" data-value-start="0").filter-group__input#price-start
						span.filter-group__line
						label.filter-group__label
							input(type="number" data-value-end="10000").filter-group__input#price-end
					.filter-group__slider.slider-filter(data-slider-filter data-get-start="500" data-get-end="1000")
			.filter-group(data-filter-group)
				.filter-group__title.content-title Вес
				.filter-group__item
					.filter-group__inputs
						label.filter-group__label
							input(type="number" data-value-start="0").filter-group__input#weight-start
						span.filter-group__line
						label.filter-group__label
							input(type="number" data-value-end="5000").filter-group__input#weight-end
					.filter-group__slider.slider-filter(data-slider-filter data-get-start="800" data-get-end="2000")
			if currentTitle = "Орехи и сухофрукты"
				.filter-group.filter-group__material
					.filter-group__title.content-title Категория
					.radiobutton-item
						label
							input(type="radio" name="material" checked class="real-radio")
							span.custom-radio
							span.radiobutton-item__text Орехи
					.radiobutton-item
						label
							input(type="radio" name="material" class="real-radio")
							span.custom-radio
							span.radiobutton-item__text Сухофрукты
					.radiobutton-item
						label
							input(type="radio" name="material" class="real-radio")
							span.custom-radio
							span.radiobutton-item__text Цукаты
					.radiobutton-item
						label
							input(type="radio" name="material" class="real-radio")
							span.custom-radio
							span.radiobutton-item__text Наборы
			if currentTitle = "Сладкие подарки"
				.filter-group.filter-group__material
					.filter-group__title.content-title Материал упаковки
					mixin checkboxesWeight(weight, groupname)
						.checkbox-item
							label
								input(type="checkbox" name="weights[]" class="real-checkbox" data-check-weight=groupname)
								span.custom-checkbox
								span.checkbox-item__text #{weight} г
					mixin checkboxes(title, name, checked, id)
						.checkbox-item
							label
								input(type="checkbox" name=name checked=checked class="real-checkbox" id=id)
								span.custom-checkbox
								span.checkbox-item__text= title
					+checkboxes('Картон', "material", "checked")
					+checkboxes('Мягкая игрушка', "material")
					+checkboxes('Мешки', 'material')
					+checkboxes('Жестяная упаковка', "material")
					+checkboxes('Тубы', "material")
					+checkboxes('Куклы', "material")
					+checkboxes('Керамика и фетр', "material")
				.filter-group.filter-group__compound
					.filter-group__title.content-title Состав
					.filter-group__compound-item
						+checkboxes('Классик ', "compound", false, "classic")
						.filter-group__list.list-filter-group 	
							+checkboxesWeight("200", "classic")
							+checkboxesWeight("290", "classic")
							+checkboxesWeight("400", "classic")
							+checkboxesWeight("550", "classic")
							+checkboxesWeight("700", "classic")
							+checkboxesWeight("800", "classic")
							+checkboxesWeight("900", "classic")
							+checkboxesWeight("1100", "classic")
							+checkboxesWeight("1300", "classic")
						button(type="button" class="filter-group__show-more") Показать все
					.filter-group__compound-item
						+checkboxes('Премиум ', "compound", false, "premium")
						.filter-group__list.list-filter-group 	
							+checkboxesWeight("300", "premium")
							+checkboxesWeight("500", "premium")
							+checkboxesWeight("650", "premium")
							+checkboxesWeight("750", "premium")
							+checkboxesWeight("850", "premium")
							+checkboxesWeight("950", "premium")
							+checkboxesWeight("1500", "premium")
						button(type="button" class="filter-group__show-more") Показать все
					.filter-group__compound-item
						+checkboxes('VIP ', "compound", false, "vip")
						.filter-group__list.list-filter-group 	
							+checkboxesWeight("370", "vip")
							+checkboxesWeight("600", "vip")
							+checkboxesWeight("810", "vip")
							+checkboxesWeight("1000", "vip")
							+checkboxesWeight("1200", "vip")
							+checkboxesWeight("2100", "vip")
						button(type="button" class="filter-group__show-more") Показать все
					.checkbox-item
							label
								input(type="checkbox" name="nocompound" value="null" class="real-checkbox" id="nocompound")
								span.custom-checkbox
								span.checkbox-item__text Без состава
			.filter-group.filter-group__addit
				.filter-group__title.content-title Дополнительно
				+checkboxes('Новинка', "badge", "checked")
				+checkboxes('Хит', "badge")
				+checkboxes('Скидка', "badge")
			.filter-group.filter-group__buttons
				button(type="button" data-filter-close).filter-group__btn.btn-green Показать
				button(type="button").filter-group__btn.btn-green.filter-group__btn-reset Сбросить