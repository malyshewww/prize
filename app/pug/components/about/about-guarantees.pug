.about-guarantees
   .about-guarantees__container
      .container
         .about-guarantees__image 
            img(src="img/about/guarantees-img-left.png", alt="")
         .about-guarantees__items
            each item in guarantees
               .about-guarantees__item
                  .about-guarantees__icon 
                     img(src=`img/about/guarantees-${item.icon}.svg`, alt="")
                  .about-guarantees__text 
                     p!= item.text