mixin graphModal(id, className)
	.graph-modal__container.modal(role="dialog" aria-modal="true" data-graph-target=id class=className)
		div(class="graph-modal__content modal__content")
			button(class="graph-modal__close modal__close icon-delete" type="button" aria-label="Закрыть модальное окно")
			.modal__body
			if block 
				block