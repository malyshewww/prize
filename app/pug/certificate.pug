extends layout.pug

block vars 
	- var pageTitle = "Сертификаты";

block content
	div.breadcrumbs.container
		ul.breadcrumbs__list
			li.breadcrumbs__item
				a(href="#").breadcrumbs__link Главная
			li.breadcrumbs__item= pageTitle
	section.certificate 
		.certificate__container 
			h1.certificate__title.general-title= pageTitle
		include ./components/certificate/certificate-images
	include ./components/consultation
	include ./components/popular